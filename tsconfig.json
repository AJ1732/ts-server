{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [ "./node_modules/@types", ".src/types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*"],
  "exclude": ["node_modules", "dist"],
   "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
